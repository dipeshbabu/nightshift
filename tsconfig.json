{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "customConditions": ["browser"],
    "baseUrl": ".",
    "paths": {
      "@tui/*": ["./src/tui/tui/*"],
      "@/*": ["./src/tui/lib/*"]
    }
  },
  "include": ["src"]
}
